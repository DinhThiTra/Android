<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
   <LinearLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:weightSum="10"
       tools:context=".MainActivity">
       <TextView
           android:id="@+id/txtsoA"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_marginRight="300dp"
           android:layout_marginTop="30dp"
           android:layout_weight="3"
           android:gravity="center"
           android:text="Số A:"
           android:textSize="24sp" />
       <EditText
           android:id="@+id/edtX"
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center"/>
       <TextView
           android:id="@+id/txtsoB"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_marginRight="300dp"
           android:layout_marginTop="30dp"
           android:layout_weight="3"
           android:gravity="center"
           android:text="Số B:"
           android:textSize="24sp" />
       <EditText
           android:id="@+id/edtY"
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center"/>
       <TextView
           android:id="@+id/txtResult"
           android:layout_width="wrap_content"
           android:layout_weight="3"
           android:layout_height="0dp"
           android:textSize="24sp"
           android:layout_gravity="center"
           android:textColor="@color/blue"
           android:text="@string/result" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="50dp"
           android:orientation="vertical"
           android:gravity="center">

           <Button
               android:id="@+id/btncong"
               android:layout_width="350dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:text="Tổng 2 số"
               android:textSize="24sp" />

           <Button
               android:id="@+id/btntru"
               android:layout_width="350dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:text="Hiệu 2 số"
               android:textSize="24sp" />

           <Button
               android:id="@+id/btnnhan"
               android:layout_width="350dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:text="Tích 2 số"
               android:textSize="24sp" />

           <Button
               android:id="@+id/btnchia"
               android:layout_width="350dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:text="Thương 2 số"
               android:textSize="24sp" />
           <Button
               android:id="@+id/btnucln"
               android:layout_width="350dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:text="Ước chung lớn nhất"
               android:textSize="24sp" />
           <Button
               android:id="@+id/btnthoat"
               android:layout_width="350dp"
               android:layout_height="50dp"
               android:layout_gravity="center"
               android:text="Thoát chương trình"
               android:textSize="24sp" />
       </LinearLayout>


   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>