<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@color/green"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="CHƯƠNG TRÌNH TÍNH CHỈ SỐ BMI"
                android:textSize="24sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/textview2"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Nhập tên:"
                android:textSize="20sp" />
            <EditText
                android:id="@+id/editten"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="-6dp"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textview3"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="Chiều cao:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editchieucao"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_marginTop="-11dp" />
    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/textview4"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Cân nặng:"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editcannang"
                android:layout_width="32dp"
                android:layout_height="55dp"
                android:layout_marginTop="-11dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/btntinhBMI"
                android:layout_width="350dp"
                android:layout_height="50dp"
               android:layout_marginLeft="20dp"
                android:text="TÍNH BMI"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:background="@color/gray"
                android:textSize="24sp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/textview5"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="BMI ="
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editBMI"
                android:layout_width="32dp"
                android:layout_height="55dp"
                android:layout_marginTop="-11dp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/textview6"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="Chẩn đoán:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editchandoan"
                android:layout_width="32dp"
                android:layout_height="55dp"
                android:layout_marginTop="-11dp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
