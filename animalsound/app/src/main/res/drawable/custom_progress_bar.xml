<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Background layer -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#e0e0e0"/> <!-- Màu nền của ProgressBar -->
                <corners android:radius="10dp"/> <!-- Bo tròn các góc -->
            </shape>
        </item>
        <!-- Progress layer -->
        <item>
            <clip>
                <shape android:shape="rectangle">
                    <solid android:color="#00bcd4"/> <!-- Màu của tiến trình -->
                    <corners android:radius="10dp"/> <!-- Bo tròn các góc -->
                </shape>
            </clip>
        </item>
    </layer-list>
</selector>